<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:id="@+id/actionbar_tab_1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:onClick="up"
        android:text="UP A FLOOR"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/first_floor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mapSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border3"
                android:ems="10"
                android:hint="  Search"
                android:inputType="textPersonName" />

            <CheckBox android:id="@+id/displayBathrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display All Bathrooms"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/displayExits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display All Exits/Stairs"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:onClick="down"
        android:text="DOWN A FLOOR"/>

</LinearLayout>